---
import { localizePath } from "astro-i18next";
import imgData from "../../website-data/imgs/big-data.png";
import ButtonColor from "../ButtonColor.astro";
import { t } from "i18next";
---

<div class="wrapper">
    <div class="flex">
        <div>
            <div class="title">{t("special_data.title")}</div>
            <div class="sub-title">
                {t("special_data.sub-title")}
            </div>

            <div class="text">
                {t("special_data.text")}
            </div>
        </div>
        <div class="img">
            <img alt="data logo" src={imgData} />
        </div>
    </div>
    <div class="div-link">
        <a class="link" href={localizePath("/offres/data")}>
            <ButtonColor>{t("special_data.button")}</ButtonColor>
        </a>
    </div>
</div>
<style>
    .div-link {
        display: flex;
        justify-content: center;
    }
    .link {
        text-decoration: none;
    }
    .img {
        display: flex;
        flex-direction: column;
    }
    .img img {
        margin: 8px;
        padding: 20px;
        background-color: #fff;
        color: rgba(0, 0, 0, 0.87);
        transition: box-shadow 300ms cubic-bezier(0.4, 0, 0.2, 1) 0ms;
        border-radius: 4px;
        box-shadow: 0px 3px 3px -2px rgb(0 0 0 / 20%), 0px 3px 4px 0px rgb(0 0 0 / 14%),
            0px 1px 8px 0px rgb(0 0 0 / 12%);
    }
    .flex {
        display: flex;
        padding-left: 50px;
        margin-bottom: 40px;
    }
    .flex > * {
        flex: 1;
    }
    .flex img {
        width: 40%;
        margin: auto;
    }
    .button-wrap {
        text-align: center;
    }
    .wrapper {
        padding: 50px;
        width: 80%;
        margin: auto;
    }
    .title {
        padding-top: 50px;
        font-size: 2em;
    }
    .sub-title {
        padding: 30px 0px;
        font-weight: 300;
    }
    .text {
        padding: 20px 0px;
    }
    .button {
        background-color: #d61f48;
        padding: 25px 50px;
        border-radius: 35px;
    }
    @media screen and (max-width: 767px) {
        .flex {
            display: block;
            padding-left: 0px;
        }
        .img img {
            width: 50%;
            padding: 15px;
        }
    }
</style>
